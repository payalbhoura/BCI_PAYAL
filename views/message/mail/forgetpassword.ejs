<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Forgot Password</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
            /* Ensure relative positioning for the ::before pseudo-element */
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            /* background: url("/images/patterns/1.jpg") no-repeat center center fixed; */
            background-size: cover;
            opacity: 0.4;
            /* Adjust opacity as needed */
            z-index: -1;
            /* Ensure it's behind other content */
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.4);
            width: 400px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .container:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        }

        #loginHeader {
            font-family: Arial, Helvetica, sans-serif;
            color: #0b3460;
            /* Change this to your desired color */
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 50px;
            text-align: center;
            /* Adjust as needed for spacing */
            transition: color 0.3s ease, text-shadow 0.3s ease;
        }

        #loginHeader:hover {
            color: #0056b3;
            /* Change to a darker shade or your preferred color */
            text-shadow: 2px 2px 10px rgba(0, 86, 179, 0.3);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #999696;
            font-size: 16px;
        }

        input {
            border: none;
            padding: 10px;
            width: 84%;
            margin-bottom: 10px;
            /* Adjust as needed to control the gap between input fields */
            font-size: 16px;
            /* Adjust font size */
            font-family: Arial, sans-serif;
            /* or any other font family you prefer */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            /* Add box-shadow */
        }

        input:hover {
            background-color: #f0f0f0;
            border-color: #ceaede;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5),
                /* Red */
                0 0 20px rgba(143, 146, 173, 0.5),
                /* Green */
                0 0 30px rgba(255, 255, 255, 0.5);
            /* Blue */
        }

        input:focus {
            outline: none;
            /* border-color: #ceaede; */
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5),
                /* Red */
                0 0 20px rgba(143, 146, 173, 0.5),
                /* Green */
                0 0 30px rgba(255, 255, 255, 0.5);
            /* Blue */
        }

        #email>input:focus {
            outline: none;
        }

        input[type="email"] {
            width: calc(100% - 22px);
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            transition: border-color 0.3s ease, background-color 0.3s ease;
        }

        input[type="email"]:focus {
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5),
                /* Red */
                0 0 20px rgba(143, 146, 173, 0.5),
                /* Green */
                0 0 30px rgba(255, 255, 255, 0.5);
        }

        input[type="submit"] {
            background-image: linear-gradient(to right, blue, purple);
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            transition: background-color 0.3s ease, transform 0.3s ease;
            width: 90%;
        }

        input[type="submit"]:hover {
            transform: translateY(-2px);
            background-image: linear-gradient(to right,
                    rgb(3, 3, 80),
                    rgb(194, 39, 194),
                    rgb(3, 3, 80));
        }

        input[type="submit"]:active {
            transform: translateY(0);
        }

        /* Style for the back link */
        .back a {
            text-decoration: none;
            /* Removes underline from the link */
            color: #787474;
            font-weight: 800;
            /* Sets the color of the link */
            transition: color 0.3s ease;
            /* text-decoration: underline #787474; */
            /* Adds transition effect to color change */
        }

        /* Hover effect for the back link */
        .back a:hover {
            color: #062444;
            text-decoration: underline #062444;
            /* Changes the color of the link on hover */
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 id="loginHeader">FORGOT PASSWRORD</h2>
        <form id="form" method="POST">
            <div class="form-group">
                <input type="email" name="email" id="email" placeholder="Enter Your Email" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" />

                <div class="back">
                    <a href="/login" style="text-decoration: none">
                        <i class="fa-solid fa-backward"></i> Go Back</a>
                </div>
            </div>
        </form>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    const form = document.getElementById("form");
    const email = document.getElementById("email");

    function setError(element, message) {
        element.style.outline = "1px solid red";
        error.innerText = message;
      }

      function clearError(element) {
        element.style.outline = "none";
        error.innerText = "";
      }

      function validateEmail(e) {
        let regex = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/;
        if (!regex.test(e.target.value.trim())) {
          setError(e.target, "Email is invalid!");
          return false;
        } else {
          clearError(e.target);
        }
      }
      email.addEventListener("input", validateEmail);


    form.addEventListener("submit", (e) => {
        e.preventDefault();
        fetch("/forgotpassword", {
            method: "POST",
            headers: {
                "Content-Type": "Application/json",
            },
            body: JSON.stringify({ email: email.value }),
        })
            .then((res) => {
                if (res.status == 200) {
                    return res.json();
                }
            })
            .then((result) => {
                Swal.fire({
                    title: "Forgot Password Request",
                    text: result.message,
                    icon: "success",
                    confirmButtonText: "Ok",
                });
            })
            .catch((error) => {
                console.log(error);
            });
    });
</script>

</html>