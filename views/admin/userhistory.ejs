<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <style>
        * {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-size: cover;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .header-logo {
            height: 88px;
            width: 100%;
            box-shadow: 0px 2px 4px grey;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(to right, #2C3E50, #0a6aca, #354250);
            /* Dark linear gradient background */
            transition: background-image 0.5s ease, box-shadow 0.5s ease;
        }
        .header-logo:hover {
            background-image: linear-gradient(to right, #0a6aca, #2C3E50, #0a6aca);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
        .header-title {
            cursor: pointer;
            user-select: none;
            font-size: 24px;
            font-weight: bold;
            letter-spacing: 2px;
            animation: textGlow 2s ease-in-out infinite alternate;
        }
        #signupHeader {
            color: #0b3460;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: color 0.3s ease, text-shadow 0.3s ease;
        }

        #signupHeader:hover {
            color: #0056b3;
            text-shadow: 2px 2px 10px rgba(0, 86, 179, 0.3);
        }
        #header {
            /* background: linear-gradient(to right, #e6b9eb, #3d3883, #e3c4e6); */
            /* color: #dddada; */
            display: flex;
            font-weight: bolder;
            /* make the children elements flex items */
            width: 100%;
            padding: 10px 20px;
            box-shadow: 0px 0px 4px 3px rgb(238, 235, 238);
        }
        
        #header:hover {
            background: linear-gradient(to right, #faf7fa, #3d3883, #faf7fa);
            /* change cursor to pointer on hover */
        }

        #header a {
            text-decoration: none;
            color: #141313;
            transition: color 0.3s ease;
            margin-right: 40px;
            /* space between links */
            color: #2C3E50;
            font-weight: bolder;
            transition: color 0.3s ease;
        }

        #header a:hover {
            text-decoration: underline;
            /* underline on hover */
            cursor: pointer;

        }

        .home {
            margin-left: 5%;
        }


        .useractions {
            margin-left: 63%
        }

        .useractions:hover {
            cursor: pointer;
            color: #f9f9f9;
        }



        .container {
            width: 85%;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            box-shadow: 0px 0px 3px 4px grey;
            border-radius: 8px;
            background-color: #f9f9f9;
            height: 45%;
            overflow-x: auto;
        }


        table {
            width: 100%;
            border-collapse: collapse;
            font-family: 'Arial', sans-serif;
            margin-bottom: 20px;
        }

      /* Table header styling */
      table thead {
            background-color: #d3abf8;
            color: #1a1717;
            text-align: left;
        }
        
        table thead th {
            padding: 7px;
            font-size: 16px;
            transition: background-color 0.3s, color 0.3s;
        }
        table tbody {
            background-color: #ffffff;
            color: #121213;
        }
        table tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        table tbody tr:hover {
            background-color: #e9ecef;
            transition: background-color 0.3s;
        }

        table tbody td {
            padding: 10px;
            border-bottom: 1px solid #dee2e6;
            font-size: 14px;
        }

        /* Table Action button styling */
        table tbody td .action-button {
            padding: 5px 10px;
            color: #ffffff;
            background-color: #28a745;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

        table tbody td .action-button:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        .action-buttons button {
            padding: 5px 10px;
            margin-right: 5px;
            cursor: pointer;
        }

        .action-buttons button.accept {
            background-color: #4CAF50;
            color: white;
            border: none;
        }

        .action-buttons button.reject {
            background-color: #f44336;
            color: white;
            border: none;
        }
        
        .footer {
            margin-top: 5%;
            width: 100%;
            position: absolute;
            bottom: 0;
            box-shadow: 0px 0px 1px 4px rgb(247, 242, 242);
            color: rgb(245, 241, 251);
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 14px;
            font-weight: 700;
            background-image: linear-gradient(to right, #2C3E50, #0a6aca, #354250);
            height: 6%;
            transition: background-image 0.5s ease, box-shadow 0.5s ease;
        }
        .footer:hover {
            background-image: linear-gradient(to right, #09549e, #2C3E50, #095bad);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }


    </style>
</head>

<body>
    <div class="header-logo">
        <h1 class="header-title" title="BILLING CUM INVENTORY MANAGEMENT SYSTEM">BCI MANAGEMENT SYSTEM</h1>
    </div>

    <h2 id="signupHeader">USER HISTORY</h2>

    <div id="header">
        <div class="home"> <a href="/admin/home">HOME </a></div>
        <div class="approved"> <a href="/admin/userhistory">USER HISTORY</a></div>
        <a href="/logout" class="nav-btn useractions">Logout</a>
    </div>


    <div class="container">
        <div style="overflow-x: auto;">
            <table id="users-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr id="<%=user.id%>">
                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td class="status">
                                <% if (user.approved) { %>
                                    "Approved"
                                    <% } %>
                                        <% if (user.rejected) { %>
                                            "Rejected"
                                            <% } %>

                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer">
        <p><i>Designed by: PAYAL KATOCH </i></p>
    </div>

    <script>
        // Function to accept a user
        function acceptUser(userId) {
            fetch('/admin/update' + userId, {
                method: 'put',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => {
                    if (response.ok) {
                        document.getElementById(userId).remove();
                    }
                    throw new Error('Network response was not ok.');
                })
                .then(data => {
                    console.log(data);
                    renderUsersTable(data.users);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        // Function to reject a user
        function rejectUser(userId) {
            fetch('/admin/update/' + userId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ action: 'reject' })
            })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    }
                    throw new Error('Network response was not ok.');
                })
                .then(data => {
                    console.log(data);
                    renderUsersTable(data.users);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        // Function to render users table
        function renderUsersTable(users) {
            const tableBody = document.querySelector('#users-table tbody');
            tableBody.innerHTML = '';

            users.forEach(user => {
                const row = `
                    <tr>
                        <td>${user.id}</td>
                        <td>${user.username}</td>
                        <td>${user.email}</td>
                        <td>${user.status}</td>
                        <td class="action-buttons">
                            <button class="accept" onclick="acceptUser(${user.id})">Accept</button>
                            <button class="reject" onclick="rejectUser(${user.id})">Reject</button>
                        </td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });
        }
    </script>
</body>

</html>